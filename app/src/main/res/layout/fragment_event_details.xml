<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.screens.event_details.EventDetailsFragment"
    >


    <androidx.constraintlayout.widget.Group
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/group"
        app:constraint_referenced_ids="linearLayout2, cardView"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#0066CC"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <ImageView
                    android:id="@+id/arrowIV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_baseline_arrow_back_36" />

                <TextView
                    android:id="@+id/nameToolBarTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/e_ukraine"
                    android:text="Ceritas Ukraine"
                    android:textColor="#FFFFFF"
                    android:textFontWeight="500"
                    android:textSize="14dp" />

                <ImageView
                    android:id="@+id/saveIV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="20dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_baseline_bookmark_border_36"
                    />
            </RelativeLayout>


        </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolBar"
            android:textSize="12dp"
            android:textFontWeight="300"
            >


            <ImageView
                android:id="@+id/eventIconIV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="Event icon "
                android:scaleType="centerCrop"
                android:src="@drawable/event_icon_1"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                >

                <TextView
                    android:id="@+id/dateTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/blue_border_bg"
                    android:drawablePadding="4dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:text="12.02.2023 12:00"
                    android:textColor="#0066CC"
                    android:textSize="12sp"
                    android:textFontWeight="300"
                    android:fontFamily="@font/e_ukraine"
                    />

                <TextView
                    android:id="@+id/pointsTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/blue_border_bg"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:text="+30G"
                    android:textColor="#0066CC"
                    android:textSize="12sp"
                    android:textFontWeight="300"
                    android:fontFamily="@font/e_ukraine"
                    />

            </LinearLayout>

            <TextView
                android:id="@+id/typeOfWork"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:text="Clearing roads from debris"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_marginTop="12dp"
                android:textSize="24dp"
                android:textFontWeight="500"
                android:fontFamily="@font/e_ukraine"
                />


            <TextView
                android:id="@+id/placeTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:textColor="#757575"
                android:textSize="12dp"
                android:textFontWeight="300"
                android:text="Kherson, Highway M14"
                android:textStyle="bold"
                android:fontFamily="@font/e_ukraine"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                >


                <TextView
                    android:id="@+id/numberOfWorkersTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:layout_marginLeft="16dp"
                    android:text="12/50"
                    android:drawablePadding="4dp"
                    android:drawableTint="@color/blue"
                    android:textColor="#0066CC"
                    android:textSize="14dp"
                    android:textFontWeight="300"
                    android:drawableLeft="@drawable/ic_baseline_person_outline_16"
                    android:fontFamily="@font/e_ukraine"
                    />

                <TextView
                    android:id="@+id/donationTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:layout_marginLeft="24dp"
                    android:text="2400/3000"
                    android:textSize="14dp"
                    android:drawableTint="@color/blue"
                    android:textFontWeight="300"
                    android:drawablePadding="4dp"
                    android:textColor="#0066CC"
                    android:drawableLeft="@drawable/ic_uah_symbol"
                    android:fontFamily="@font/e_ukraine"
                    />


            </LinearLayout>


            <TextView
                android:id="@+id/organizerTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="32dp"
                android:layout_marginRight="16dp"
                android:text="Organizer"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textFontWeight="500"
                android:fontFamily="@font/e_ukraine"
                android:textStyle="bold"
                />


            <TextView
                android:id="@+id/organizerDescriptionTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:text="Caritas Ukraine"
                android:textColor="#757575"
                android:textSize="14dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/e_ukraine"
                />

            <TextView
                android:id="@+id/descriptionTitleTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="24dp"
                android:layout_marginRight="16dp"
                android:text="Description"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="14dp"
                android:textFontWeight="500"
android:fontFamily="@font/e_ukraine"
                />


            <TextView
                android:id="@+id/descriptionTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:text="Lorem ipsum dolor sit amet, consectetuer adipiscing elit, sed diam nonummy nibh euismod tincidunt ut laoreet dolore magna aliquam erat volutpat. "
                android:textColor="#757575"
                android:textSize="12dp"
                android:textFontWeight="300"
                android:fontFamily="@font/e_ukraine"
                />

            <TextView
                android:id="@+id/dutiesTitleTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="24dp"
                android:layout_marginRight="16dp"
                android:fontFamily="@font/e_ukraine"
                android:text="Duties"
                android:textColor="#000000"
                android:textFontWeight="500"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/dutiesTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="8dp"
                android:text="Lorem ipsum dolor sit amet, consectetuer adipiscing elit, sed diam nonummy nibh euismod tincidunt ut laoreet dolore magna aliquam erat volutpat. Ut wisi enim ad adipiscing elit, sed diam nonummy nibh euismod tincidunt ut laoreet dolore magna aliquam erat volutpat. "
                android:textColor="#757575"
                android:textSize="12dp"
                android:textFontWeight="300"
                android:fontFamily="@font/e_ukraine"
                />


        </LinearLayout>


        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:translationZ="16dp"
            app:cardElevation="16dp"
            >

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:weightSum="2"
                >


                <Button
                    android:id="@+id/registerButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/blue_bg_rounded"
                    android:layout_marginBottom="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="4dp"
                    android:text="Register"
                    android:textColor="#FFFF"
                    android:bottomLeftRadius="15dp"
                    android:bottomRightRadius="15dp"
                    android:topLeftRadius="10dp"
                    android:topRightRadius="10dp"
                    android:layout_marginTop="16dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/e_ukraine"
                    android:textFontWeight="500"
                    android:textSize="12sp"
                    android:textAllCaps="false"
                    />

                <Button
                    android:id="@+id/donationButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/blue_border_bg"
                    android:text="Make a donation"
                    android:textColor="#0066CC"
                    android:textAllCaps="false"
                    android:layout_weight="1"
                    android:fontFamily="@font/e_ukraine"
                    android:textFontWeight="500"
                    android:textSize="12sp"
                    />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <ProgressBar
            tools:visibility="gone"
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>