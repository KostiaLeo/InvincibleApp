<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_nav_graph"
    app:startDestination="@id/searchFragment"
    >

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.lyft.android.interviewapp.ui.screens.search.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search"
        >
        <action
            android:id="@+id/action_searchFragment_to_eventDetailsFragment"
            app:destination="@id/eventDetailsFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"
            />
    </fragment>
    <fragment
        android:id="@+id/eventDetailsFragment"
        android:name="com.lyft.android.interviewapp.ui.screens.event_details.EventDetailsFragment"
        android:label="fragment_event_details"
        tools:layout="@layout/fragment_event_details"
        >
        <argument
            android:name="eventId"
            app:argType="string"
            />
    </fragment>
</navigation>